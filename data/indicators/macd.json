{
  "id": "macd",
  "name": "MACD",
  "description": "Moving Average Convergence Divergence",
  "type": "oscillator",
  "pane": "main",
  "parameters": {
    "fastPeriod": {
      "type": "number",
      "default": 12,
      "min": 5,
      "max": 50,
      "label": "Fast Period"
    },
    "slowPeriod": {
      "type": "number",
      "default": 26,
      "min": 10,
      "max": 100,
      "label": "Slow Period"
    },
    "signalPeriod": {
      "type": "number",
      "default": 9,
      "min": 3,
      "max": 30,
      "label": "Signal Period"
    },
    "color": {
      "type": "color",
      "default": "#00BCD4",
      "label": "Color"
    }
  },
  "style": {
    "macdColor": "#00BCD4",
    "signalColor": "#FF5722",
    "histogramColor": "#4CAF50",
    "lineWidth": 2,
    "lineStyle": "solid"
  },
  "outputs": {
    "macd": {
      "name": "MACD",
      "description": "MACD line (difference between fast and slow EMA)",
      "type": "line",
      "defaultColor": "#00BCD4",
      "displayName": "MACD({fastPeriod},{slowPeriod})"
    },
    "signal": {
      "name": "Signal",
      "description": "Signal line (EMA of MACD line)",
      "type": "line",
      "defaultColor": "#FF5722",
      "displayName": "Signal({signalPeriod})"
    },
    "histogram": {
      "name": "Histogram",
      "description": "MACD Histogram (difference between MACD and Signal)",
      "type": "histogram",
      "defaultColor": "#4CAF50",
      "displayName": "Histogram",
      "colorRules": [
        {
          "condition": "value > 0",
          "color": "#4CAF50"
        },
        {
          "condition": "value < 0",
          "color": "#F44336"
        }
      ]
    }
  }
}