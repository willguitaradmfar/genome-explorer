{
  "name": "genome-explorer",
  "version": "1.0.0",
  "description": "Genome Explorer - Advanced Trading Analysis Desktop Application",
  "homepage": "https://github.com/username/genome-explorer",
  "repository": "https://github.com/username/genome-explorer",
  "main": "main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "webpack serve --mode development --port 3000 --host 0.0.0.0",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && npm run electron-dev\"",
    "build": "webpack --mode production",
    "electron": "electron .",
    "electron-dev": "wait-on http://localhost:3000 && ELECTRON_IS_DEV=1 electron .",
    "electron-only": "ELECTRON_IS_DEV=1 electron .",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac --publish=never",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "trading",
    "charts",
    "technical-analysis",
    "desktop-app"
  ],
  "author": { "name": "William Lima Pereira", "email": "willguitaradmfar@gmail.com" },
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@types/node": "^24.3.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "css-loader": "^6.8.1",
    "electron": "^33.3.1",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.6.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.4.17",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "wait-on": "^8.0.4",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "lightweight-charts": "^4.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
