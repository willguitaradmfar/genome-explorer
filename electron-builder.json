{
  "appId": "com.genomeexplorer.app",
  "productName": "Genome Explorer",
  "directories": { "output": "dist" },

  "publish": [],
  "asar": true,
  "compression": "maximum",

  "files": [
    "main.js",
    "dist/**/*",
    "data/**/*",
    "node_modules/**/*",
    "!**/*.map",
    "!**/test/**",
    "!**/__tests__/**"
  ],

  "artifactName": "Genome-Explorer-${version}-${os}-${arch}.${ext}",

  "nsis": { "oneClick": false, "allowToChangeInstallationDirectory": true, "createDesktopShortcut": true, "createStartMenuShortcut": true, "shortcutName": "Genome Explorer" },

  "win": {
    "icon": "assets/icon.ico",
    "publisherName": "William Lima Pereira",
    "target": [
      { "target": "nsis", "arch": ["x64"] },
      { "target": "portable", "arch": ["x64"] }
    ],
    "publish": []
  },

  "mac": {
    "icon": "assets/icon.icns",
    "category": "public.app-category.finance",
    "target": [
      { "target": "dmg", "arch": ["x64", "arm64"] },
      { "target": "zip", "arch": ["x64", "arm64"] }
    ],
    "publish": []
  },

  "linux": {
    "icon": "assets/icon.png",
    "category": "Office",
    "target": [
      { "target": "AppImage", "arch": ["x64"] },
      { "target": "deb", "arch": ["x64"] }
    ],
    "publish": []
  }
}
